# =====================
# Autogoal base image
# ---------------------

FROM autogoal/autogoal:core

USER root

ARG extras

COPY dockerfiles/development/install-contrib.sh install-contrib.sh 
RUN chmod +x /install-contrib.sh

RUN for arg in $extras; do ./install-contrib.sh $arg; done

SHELL ["/bin/bash", "-c"]

USER coder

CMD [ "/bin/bash" ]

